<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="PSR12"
	xsi:noNamespaceSchemaLocation="phpcs.xsd">
	<description>Wordpress.</description>

	<exclude-pattern>/tests/</exclude-pattern>
	<exclude-pattern>/vendor/</exclude-pattern>
	<exclude-pattern>/build/</exclude-pattern>
	<exclude-pattern>/debug/</exclude-pattern>

	<arg name="tab-width" value="3" />

	<rule ref="WordPress">
		<exclude name="WordPress.Files.FileName" />
		<exclude name="WordPress.Arrays" />
		<exclude name="WordPress.WhiteSpace" />
		<exclude name="WordPress.NamingConventions" />
		<exclude name="WordPress.PHP.YodaConditions" />
		<exclude name="WordPress.DB.DirectDatabaseQuery" />
		<exclude name="WordPress.DB.PreparedSQL" />
	</rule>

	<rule ref="Generic">
		<exclude name="Generic.Classes.OpeningBraceSameLine" />
		<exclude name="Generic.Files.EndFileNoNewline" />
		<exclude name="Generic.PHP.ClosingPHPTag.NotFound" />
		<exclude name="Generic.Files.LowercasedFilename" />
		<exclude name="Generic.PHP.RequireStrictTypes" />
		<exclude name="Generic.Functions.OpeningFunctionBraceKernighanRitchie" />
		<exclude name="Generic.PHP.UpperCaseConstant" />
		<exclude name="Generic.NamingConventions.CamelCapsFunctionName.MethodDoubleUnderscore" />
		<exclude name="Generic.NamingConventions.CamelCapsFunctionName.ScopeNotCamelCaps" />
		<exclude name="Generic.Arrays" />
		<exclude name="Generic.WhiteSpace" />
		<exclude name="Generic.Formatting" />
	</rule>

	<rule ref="Squiz">
		<exclude name="Squiz.Functions.FunctionDeclarationArgumentSpacing" />
		<exclude name="Squiz.Arrays" />
		<exclude name="Squiz.WhiteSpace" />
		<exclude name="Squiz.NamingConventions" />
		<exclude name="Squiz.Files.FileExtension" />
		<exclude name="Squiz.Commenting.FileComment" />
		<exclude name="Squiz.Commenting.FunctionComment.SpacingAfterParamType" />
		<exclude name="Squiz.Operators" />
		<exclude name="Squiz.PHP.DisallowInlineIf" />
		<exclude name="Squiz.PHP.DisallowBooleanStatement" />
		<exclude name="Squiz.Objects.ObjectInstantiation.NotAssigned" />
		<exclude name="Squiz.ControlStructures.ElseIfDeclaration.NotAllowed" />
	</rule>

	<rule ref="PSR2">
		<exclude name="PSR2.Classes.PropertyDeclaration" />
		<exclude name="PSR2.Methods.MethodDeclaration.Underscore" />
	</rule>

	<rule ref="PSR1">
		<exclude name="PSR1.Methods.CamelCapsMethodName" />
	</rule>

	<rule ref="PEAR">
		<exclude name="PEAR" />
	</rule>
</ruleset>